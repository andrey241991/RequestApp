<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.view.MainActivity">

    <Button
        android:id="@+id/btn_get_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get all users" />

    <EditText
        android:id="@+id/ed_get_user_by_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input user id" />

    <Button
        android:id="@+id/btn_get_user_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get user by id" />

    <EditText
        android:id="@+id/ed_delete_user_by_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="input user id for deleting" />

    <Button
        android:id="@+id/btn_delete_user_by_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete user by id" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_first_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="first name" />

        <EditText
            android:id="@+id/ed_last_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="last name" />

        <EditText
            android:id="@+id/ed_email"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="email" />

        <EditText
            android:id="@+id/ed_gender"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="gender" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_create_new_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create new user" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/ed_id_for_update"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="id" />

        <EditText
            android:id="@+id/ed_update_first_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="first name" />

        <EditText
            android:id="@+id/ed_update_last_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:hint="last name" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_update_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update user" />


</LinearLayout>